{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",
    "sourceMap": true,
    "lib": ["dom", "es7"],
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.spec.*",
    "src/**/story.tsx",
    "src/**/**/story.tsx"
  ]
}
