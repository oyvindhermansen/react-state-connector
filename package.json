{
  "name": "@oyvindher/react-state-connector",
  "version": "0.1.0",
  "description": "Simple state management with native React context",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "start": "yarn build:watch",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "lint": "tslint --project \"./tsconfig.json\"",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "storybook": "start-storybook -p 9001 -c .storybook",
    "build-storybook": "build-storybook -c .storybook",
    "postversion": "git push && git push --tags",
    "prepublish": "npm run build"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/lib/"
    ],
    "testRegex": "(.*.(test|spec).(ts|tsx|js))$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "tsx"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oyvindhermansen/react-state-connector.git"
  },
  "keywords": [
    "typescript",
    "npm",
    "state",
    "context",
    "react"
  ],
  "author": "Ã˜yvind Hermansen <oyvindher@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/oyvindhermansen/react-state-connector/issues"
  },
  "homepage": "https://github.com/oyvindhermansen/react-state-connector#readme",
  "files": [
    "lib"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn build"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@storybook/addon-actions": "^5.0.1",
    "@storybook/addon-info": "^5.0.1",
    "@storybook/react": "^5.0.1",
    "@types/jest": "^24.0.9",
    "@types/node": "^11.10.5",
    "@types/react": "^16.8.7",
    "@types/react-dom": "^16.8.2",
    "@types/storybook__addon-actions": "^3.4.2",
    "@types/storybook__react": "^4.0.1",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.0.5",
    "husky": "^1.2.0",
    "jest": "^24.1.0",
    "prettier": "^1.15.2",
    "pretty-quick": "^1.8.0",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "ts-jest": "^24.0.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.4.5",
    "typings": "^2.1.1"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  }
}
